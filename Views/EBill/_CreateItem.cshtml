@model EBillingSys.Models.Items

<tr id="row-@Model.ItemIndex">
    <td>
        @Model.ProductName
        <input type="hidden" name="Items[@Model.ItemIndex].ProductName" value="@Model.ProductName" />
    </td>
    <td>
        @Model.Price
        <input type="hidden" name="Items[@Model.ItemIndex].Price" value="@Model.Price" />
    </td>
    <td>
        @Model.Quantity
        <input type="hidden" name="Items[@Model.ItemIndex].Quantity" value="@Model.Quantity" />
    </td>
    <td>
        <button type="button" class="btn btn-sm bg-danger text-white"
                onclick="RemoveItem(@Model.ItemIndex)">Remove</button>
    </td>
</tr>
<script src="~/Scripts/jquery-3.7.0.min.js"></script>
<script type="text/javascript">
    function RemoveItem(Id) {
        $('#row-' + Id).remove();
    }
</script>   